cmake_minimum_required(VERSION 3.28)
project(Purrooser)

set(CMAKE_CXX_STANDARD 14)

find_package(wxWidgets REQUIRED COMPONENTS core base webview)
include(${wxWidgets_USE_FILE})

add_executable(
        # Executable
        Purrooser

        # Sources
        src/Main.cc
        src/Purrooser/Purrooser.cc
        src/Window/PurrooserFrame.cc
        src/utils/Utils.cc
        src/Utils/Actions/Actions.cc

        # Headers
        src/Main.hpp
        src/Purrooser/Purrooser.hpp
        src/Window/PurrooserFrame.hpp
        src/utils/Utils.hpp
        src/Utils/Actions/Actions.hpp
)

target_link_libraries(Purrooser ${wxWidgets_LIBRARIES})
